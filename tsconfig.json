{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "lib": ["ESNext", "DOM"],
        "module": "ES2020",
        "moduleResolution": "node",
        "target": "ESNext",
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowUnreachableCode": false,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./",
        "paths": {
            "shared/*": ["./shared/*"],
            "client/*": ["./client/*"],
            "server/*": ["./server/*"],
            "Ëœ/*": ["./client/*"],
            "@/*": ["./server/*"]
        }
    },
    "include": [
        "client/**/*.js",
        "client/**/*.ts",
        "client/**/*.spec.ts",
        "client/**/*.tsx",
        "server/**/*.ts",
        "server/**/*.spec.ts",
        "server/**/*.tsx",
        "server/**/*.js",
        "typings/**/*.ts",
        "shared/**/*.ts",
        "shared/**/*.spec.ts",
        "shared/**/*.tsx",
        "shared/**/*.js"
    ],
    "exclude": ["node_modules"]
}
